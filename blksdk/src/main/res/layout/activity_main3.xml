<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blk.sdk.activity.ActivityPosPed">

    <include
        layout="@layout/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1.5"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/fl_trans_softkeyboard"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:background="#cccccc"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.blk.sdk.activity.SoftKeyboardPasswordStyle
            android:id="@+id/soft_keyboard_view_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="0.5dp"
            android:background="#cccccc"
            android:visibility="visible" />

        <com.blk.sdk.activity.SoftKeyboardPosStyle
            android:id="@+id/soft_keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="0.5dp"
            android:background="#cccccc"
            android:visibility="invisible" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>